<% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
<% end %>

<%= form_with(model: @article, local: true)  do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>