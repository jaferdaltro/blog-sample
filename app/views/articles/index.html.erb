<div class="container">
    <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
            <div class="card text-center">
                <div class="card-header text-italic "> 
                    by <%= article.user.username if article.user %> 
                </div>
                <div class="card-body ">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text"><%= truncate(article.description) %></p>
                        <%=link_to "View", article_path(article), class:"btn btn-outline-success"  %>
                        <%=link_to "Edit", edit_article_path(article), class:"btn btn-outline-warning"  %>
                        <%=link_to "Delete", article_path(article), method: :delete, class:"btn btn-outline-danger"  %>
                </div>

                <div class="card-footer text-muted">
                   <small>
                        Creaded <%= time_ago_in_words(article.created_at) %> ago,
                        Edited <%= time_ago_in_words(article.updated_at) %> ago.
                   </small>
                </div>

            </div>
        </div>
        </div>
    <%end%>
</div>


