<div class="text-center mt-4"><%= @article.title %></div>

<div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
            <div class="card text-center">
                <div class="card-header text-italic "> 
                    by <%= @article.user.username %>
                    <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
                    <% if @article.categories.any? %>
                        <div class="mt-2"><%= render @article.categories %></div>
                    <% end %>
                </div>
                <div class="card-body ">
                        <p class="card-text"><%= simple_format(@article.description) %></p>
                        <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
                            <%=link_to "Edit", edit_article_path(@article), class:"btn btn-outline-warning"  %>
                            <%=link_to "Delete", article_path(@article), method: :delete, class:"btn btn-outline-danger"  %>
                        <% end %>
                </div>

                <div class="card-footer text-muted">
                   <small>
                        Creaded <%= time_ago_in_words(@article.created_at) %> ago,
                        Edited <%= time_ago_in_words(@article.updated_at) %> ago.
                   </small>
                </div>

            </div>
        </div>
        </div>
</div>